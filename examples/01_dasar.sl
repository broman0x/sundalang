# 01_dasar.sl - Dasar Pemrograman SundaLang

# 1. Variabel (tanda & tetep)
tanda ngaran = "Kabayan"
tetep KOTA = "Bandung"
tanda umur = 30

cetakkeun("Sampurasun, " + ngaran + " ti " + KOTA)
cetakkeun("Umur: " + umur + " taun")

# 2. Manipulasi String & Tipe Data
tanda seru = garede("halo bandung!")
cetakkeun("Kapital: " + seru)
cetakkeun("Tipe data umur: " + tipe(umur))

